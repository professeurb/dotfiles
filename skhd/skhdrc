alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

alt - g : yabai -m window --toggle split

alt - a : yabai -m window --resize left:-20:0
alt - d : yabai -m window --resize right:20:0
alt - w : yabai -m window --resize top:0:-20
alt - s : yabai -m window --resize bottom:0:20
shift + alt - a : yabai -m window --resize left:20:0
shift + alt - d : yabai -m window --resize right:-20:0
shift + alt - w : yabai -m window --resize top:0:20
shift + alt - s : yabai -m window --resize bottom:0:-20

# Space movements

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - z : yabai -m space --focus prev
alt - x [
  "Emacs" ~
  * : yabai -m space --focus next
]

# Send window to space and focus

shift + alt - 1 : yabai -m window --space 1 ; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2 ; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3 ; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4 ; yabai -m space --focus 4
shift + alt - z : yabai -m window --space prev ; yabai -m space --focus prev
shift + alt - x : yabai -m window --space next ; yabai -m space --focus next

alt - c : yabai -m window --toggle zoom-fullscreen
shift + alt - c : yabai -m window --toggle float ;\
                  yabai -m window --grid 12:10:1:1:8:10

alt - t : yabai -m config --space "$(yabai -m query --spaces --space | jq '.index')" layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')"

ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
